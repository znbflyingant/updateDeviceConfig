{
  "name": "firmware-upgrade-server",
  "version": "1.0.0",
  "description": "固件升级配置管理工具后端服务",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "nodemon index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update": "node update-config-tool.js",
    "validate-env": "node validate-env.js",
    "prestart": "NODE_ENV=production node validate-env.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:restart:prod": "pm2 restart firmware-server-prod --update-env",
    "pm2:restart:test": "pm2 restart firmware-server-test --update-env",
    "pm2:stop:prod": "pm2 stop firmware-server-prod",
    "pm2:stop:test": "pm2 stop firmware-server-test",
    "pm2:logs:prod": "pm2 logs firmware-server-prod --lines 200",
    "pm2:logs:test": "pm2 logs firmware-server-test --lines 200",
    "pm2:monit": "pm2 monit"
  },
  "dependencies": {
    "ali-oss": "6.23.0",
    "body-parser": "1.20.2",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "crypto": "1.0.1",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-rate-limit": "7.1.0",
    "helmet": "7.1.0",
    "morgan": "1.10.0",
    "multer": "2.0.2"
  },
  "devDependencies": {
    "nodemon": "3.0.1"
  },
  "optionalDependencies": {
    "chalk": "4.1.2"
  },
  "keywords": [
    "firmware",
    "upload",
    "oss",
    "esp32"
  ],
  "author": "Your Name",
  "license": "MIT"
}
